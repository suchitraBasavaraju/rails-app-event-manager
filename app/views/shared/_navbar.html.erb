<% if user_signed_in? %>
  <div style="display: flex; align-items: center;">
    <%= current_user.email %>
    <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
  </div>

<% else %>
  <%= link_to 'Login', new_user_session_path %> / <%= link_to 'Signup', new_user_registration_path %>
<% end %>